{
  "breadcrumbs.enabled": false,
  "customizeUI.activityBar": "bottom",
  "customizeUI.activityBarHideSettings": true,
  "customizeUI.font.regular": "monospace",
  "customizeUI.titleBar": "regular",
  "customizeUI.moveStatusbar": true,
  "diffEditor.renderSideBySide": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.rulers": [80, 100],
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.confirmSync": false,
  "keyboard.dispatch": "keyCode",
  "search.mode": "reuseEditor",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "hidden",
  "window.restoreFullscreen": true,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20,

  "projectManager.any.baseFolders": ["~/projects/"],
  "projectManager.any.maxDepthRecursion": 1,

  "[python]": {},
  "python.linting.flake8Enabled": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["--no-cov"],

  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#eea",
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.replaceWithRegister": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [">"], "after": [">", ">"], "commands": [] },
    { "before": ["<"], "after": ["<", "<"], "commands": [] },
    { "before": ["H"], "after": ["J"], "commands": [] },
    { "before": ["J"], "after": ["2", "0", "j"], "commands": [] },
    { "before": ["K"], "after": ["2", "0", "k"], "commands": [] },

    { "before": ["u"], "after": [], "commands": ["undo"] },
    { "before": ["U"], "after": [], "commands": ["redo"] },
  ],
  "vim.insertModeKeyBindingsNonRecursive": [],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": [">"], "after": [">", "g", "v"], "commands": [] },
    { "before": ["<"], "after": ["<", "g", "v"], "commands": [] },
    { "before": ["J"], "after": ["2", "0", "j"], "commands": [] },
    { "before": ["K"], "after": ["2", "0", "k"], "commands": [] },
  ],
}
