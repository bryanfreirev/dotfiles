{
  "breadcrumbs.enabled": false,
  "debug.allowBreakpointsEverywhere": true,
  "debug.console.closeOnEnd": true,
  "debug.openExplorerOnEnd": true,
  "debug.toolBarLocation": "docked",
  "diffEditor.renderSideBySide": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "monospace",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.rulers": [80, 100],
  "editor.snippetSuggestions": "top",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "keyboard.dispatch": "keyCode",
  "search.mode": "reuseEditor",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "hidden",
  "window.restoreFullscreen": true,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20,

  "projectManager.any.baseFolders": ["~/projects/"],
  "projectManager.any.maxDepthRecursion": 1,
  "tabnine.experimentalAutoImports": true,

  "[python]": {
    "editor.formatOnSave": true,
  },
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["--no-cov"],
  "[django-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.emmet",
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.emmet",
  },

  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#eea",
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.replaceWithRegister": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [">"], "after": [">", ">"], "commands": [] },
    { "before": ["<"], "after": ["<", "<"], "commands": [] },
    { "before": ["H"], "after": ["J"], "commands": [] },
    { "before": ["J"], "after": ["2", "0", "j"], "commands": [] },
    { "before": ["K"], "after": ["2", "0", "k"], "commands": [] },

    { "before": ["u"], "after": [], "commands": ["undo"] },
    { "before": ["U"], "after": [], "commands": ["redo"] },
  ],
  "vim.insertModeKeyBindingsNonRecursive": [],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": [">"], "after": [">", "g", "v"], "commands": [] },
    { "before": ["<"], "after": ["<", "g", "v"], "commands": [] },
    { "before": ["J"], "after": ["2", "0", "j"], "commands": [] },
    { "before": ["K"], "after": ["2", "0", "k"], "commands": [] },
  ],
  "workbench.activityBar.visible": false,
  "terminal.integrated.tabs.enabled": false,
  "workbench.colorTheme": "Visual Studio Light",
  "python.formatting.blackArgs": [
    "--line-length=120"
  ],
  "html.format.templating": true,
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "editor.gotoLocation.multipleDefinitions": "goto",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "window.zoomLevel": 1,
}
